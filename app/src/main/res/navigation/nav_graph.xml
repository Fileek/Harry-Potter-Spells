<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="com.epam.harrypotterspells.spells.SpellsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_spells" >
        <action
            android:id="@+id/details_action"
            app:destination="@id/details_dest"
            app:popUpTo="@id/home_dest" />
    </fragment>
    <fragment
        android:id="@+id/details_dest"
        android:name="com.epam.harrypotterspells.details.DetailsFragment"
        android:label="DetailsFragment" >
        <argument
            android:name="spell_id"
            app:argType="string" />
    </fragment>
</navigation>