<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/double_spacing">

    <TextView
        android:id="@+id/spell_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/spell_incantation"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Locking Spell" />

    <TextView
        android:id="@+id/pronunciation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pronunciation"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@id/spell_incantation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spell_incantation" />

    <TextView
        android:id="@+id/spell_incantation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/single_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@id/spell_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pronunciation"
        app:layout_constraintTop_toBottomOf="@id/spell_name"
        tools:text="Colloportus" />

    <TextView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@id/spell_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spell_type" />

    <TextView
        android:id="@+id/spell_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/single_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@id/spell_effect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/type"
        app:layout_constraintTop_toBottomOf="@id/spell_incantation"
        tools:text="Charm" />

    <TextView
        android:id="@+id/effect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/effect"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@id/spell_effect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spell_effect" />

    <TextView
        android:id="@+id/spell_effect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/single_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@id/spell_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/effect"
        app:layout_constraintTop_toBottomOf="@id/spell_type"
        tools:text="Locks doors" />

    <TextView
        android:id="@+id/light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/light"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@id/spell_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spell_light" />

    <TextView
        android:id="@+id/spell_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/single_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@id/spell_creator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/light"
        app:layout_constraintTop_toBottomOf="@id/spell_effect"
        tools:text="Red" />

    <TextView
        android:id="@+id/creator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/creator"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@id/spell_creator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spell_creator" />

    <TextView
        android:id="@+id/spell_creator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/single_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@id/canBeVerbal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/creator"
        app:layout_constraintTop_toBottomOf="@id/spell_light"
        tools:text="Albus Dumbledore" />

    <TextView
        android:id="@+id/canBeVerbal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spell_creator"
        tools:text="Can be verbal"/>
</androidx.constraintlayout.widget.ConstraintLayout>