<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Spells.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:strokeColor="@color/brown_500">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/double_spacing">

        <TextView
            android:id="@+id/name"
            style="@style/Spells.Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Locking Spell" />

        <TextView
            android:id="@+id/incantation"
            style="@style/Spells.Incantation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Colloportus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_prefix"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/type"
                style="@style/Spells.Field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Charm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/effect_prefix"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/effect"
                style="@style/Spells.Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Locks doors" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>