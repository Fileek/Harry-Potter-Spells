<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpellsIncantation" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SpellsField" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginStart">@dimen/half_spacing</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailsTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/double_spacing</item>
    </style>

    <style name="DetailsPrefix" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/triple_spacing</item>
        <item name="android:layout_marginBottom">@dimen/triple_spacing</item>
    </style>

    <style name="DetailsField" parent="TextAppearance.AppCompat.Large">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/single_spacing</item>
    </style>

    <style name="DetailsInputField" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_marginStart">@dimen/single_spacing</item>
    </style>

    <style name="DetailsEditButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/edit_icon</item>
        <item name="android:layout_marginStart">@dimen/single_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DetailsSaveButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_marginStart">@dimen/single_spacing</item>
        <item name="android:text">@string/save</item>
    </style>
</resources>